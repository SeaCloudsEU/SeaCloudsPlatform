                </exclusion>
            </exclusions>
        </dependency>

        <dependency>
            <groupId>it.polimi.tower4clouds</groupId>
            <artifactId>rules</artifactId>
            <exclusions>
                <exclusion>
                    <groupId>org.apache.httpcomponents</groupId>
                    <artifactId>httpclient</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.javassist</groupId>
                    <artifactId>javassist</artifactId>
